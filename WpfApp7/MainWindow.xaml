<Window x:Class="WpfApp7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Label Width="150" Height="50" VerticalAlignment="Top" Content="MENU" HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="przycisk" FontSize="10" Width="100" Height="50" Click="przycisk_Click" Background="Bisque" VerticalAlignment="Center" Content="NOWY PRZYCISK" Padding="10" Margin="10"/>
        <UniformGrid x:Name="uniformgrid" Grid.Column="1" >
            <Button Content="Kolejny przycisk"/>
        </UniformGrid>

    </Grid>
</Window>
